<div class="container">
  <div class="post-container">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Link:</strong>
      <%= link_to @post.link, @post.link %>
    </p>

    <p>
      <strong>Blurb:</strong>
      <%= @post.blurb %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @post.category %>
    </p>

    <p>
      <strong>User:</strong>
      <%= link_to @post.user.username, @post.user(:id) %>
    </p>
    <% if logged_in? %>
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Back', posts_path %>
    <% end %>
  </div>
</div>
