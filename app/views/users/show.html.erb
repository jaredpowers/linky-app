<div class="container">
  <div class="post-container">

  <div class="profile">
    <%= image_tag @user.profile_pic, class: "profile-pic" %>
  </div>
  <div class="user-body">
      <p id="notice"><%= notice %></p>
      <h4><%= @user.username %></h4>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
    <div class="more-posts">
      <h5>More posts by this user</h5>
        <ul class="user-posts">
          <% @user.posts.each do |post| %>
            <li><%= link_to post.blurb, post %></li>
          <% end %>
        </ul>
    </div>

      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', users_path %>
    </div>
  </div>
</div>
